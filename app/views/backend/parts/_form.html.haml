%a.muted.form-toggle{"data-toggle" => "form", :href => "#"}
  %i.icon-plus
  Dodaj zadanie
.form_wrapper
  = form_for [:backend, @part], html: {:class => 'form-inline'} do |f|
    %div{:class => ("error" if @part.errors[:name].any?)}
      = hidden_field_tag :client_id, project.client_id
      = hidden_field_tag :project_id, project.id
      = f.text_field :name, {:placeholder => 'Nazwa zadania'}
      %button.btn.btn-primary{:type => 'submit'}
        %i.icon-plus
        Dodaj zadanie
      %a.cancel{href: "#"}
        Anuluj

